import {categorias} from '../../datos/categorias.json'
---
<h1 class="text-center font-bold text-5xl mt-10">Categorias</h1>

  {
    categorias.map(categoria => (
      <div class="flex text-center md:text-left">
        <div class="flex-l">
            <h2 class="text-2xl font-bold my-4" text-center my-8>{categoria.nombre }</h2>
            <p class="my-2">{categoria.descripcion }</p>
            <button class="bg-indigo-500 hover:bg-indigo-400 text-white font-bold py-2 px-3 rounded-full">
              Ver m√°s
            </button>
        </div>
 
        <div class="flex-1">
          <img src={ categoria.imagen } alt="" class="w-72 rounded-xl m-auto" />   
        </div>
      </div>
    ))
  }

