---
import Icon from "astro-icon";
const navLinks = [
  {
    name: "Home",
    href: "/",
    current: true,
  },
  {
    name: "Acerca de",
    href: "/acercade",
    current: false,
  },
  {
    name: "Contacto",
    href: "/contacto",
    current: false,
  },
];
---


<nav>
  <div class="container nav-container">
    <Icon name="logo" width={225} class="logo" />
    <div class="nav-wrapper">
      <button class="btn btn--menu" id="menu-btn" aria-expanded="false" aria-label="Open movile nav">
        <Icon name="feather:menu" width={25} />
      </button>
      <ul class="nav-links" role="navigation">
        { navLinks.map(link => (
          <li role="none">
            <a href={link.href} class="btn btn--${link.style} nav-link">
              {link.name}
            </a>
          </li>
        )

        )}

      </ul>
    </div>
  </div>
</nav>

<script>
  const navBtn = document.querySelector("#menu-btn");
  navBtn.addEventListener("click", () => {
    navBtn.setAttribute("aria-expanded", navBtn.getAttribute("aria-expanded") === "false" ? "true" : "false");
  });
</script>
