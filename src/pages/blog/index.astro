---
import Acomodo from '../../layouts/Acomodo.astro';
import imagenA from '../../imagenes/astronauta.jpg?url'
const posts = await Astro.glob('./posts/*.md');

---

<Acomodo tituloPage='Blog de desarrollo' descipcionPage='Vamos a ir poniendo la estrategia y el programa'>
  <h1>blog</h1> 

  <img width="100" src={imagenA} alt="">
  
  {
    posts.map(post => {
      return   <a href={post.url} class="link">{post.frontmatter.title}</a>

    })
  }
</Acomodo>

<style>
  .link {
    background: wheat;
    color: black;
    text-decoration: none;
    display: block;
    margin-bottom: 4px;
  }
</style>