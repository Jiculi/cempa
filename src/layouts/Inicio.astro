---
const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    @import "../styles/global.css";
    @import "../styles/home.css";
  </style>
</head>
<body>
  <main>
    <slot />
  
  </main>
  <footer>
    <small>Copyrigth <span id="copyrigthYear"></span>  Cempa</small>
  </footer>
  <script>
    const fecha = new Date().getFullYear();
    document.querySelector('#copyrigthYear').textContent = fecha.toString();
  </script>
</body>
</html>
